<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Visao.activity.Cadastro_Usuario"
    tools:showIn="@layout/activity_cadastro_usuario">

    <!--Relative layout pai-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <!--nome-->
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:id="@+id/edtNomeUsuario"
            android:layout_marginTop="20dp">

             <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:hint="Nome"
                 android:inputType="textPersonName"
                android:layout_marginTop="10dp"/>

        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <!--data de nascimento-->
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtNomeUsuario"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/edtDtNasc"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data de Nascimento"
                android:inputType="date"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <!--radio group de sexo-->
        <RadioGroup
            android:id="@+id/RadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtDtNasc"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Sexo"
                android:textSize="20dp" />

            <!--relative layout pra poder deixar buttons na horizontal-->
            <RelativeLayout
                android:id="@+id/layout_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--masculino-->
                <RadioButton
                    android:id="@+id/rbMasc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masculino" />

                <!--feminino-->
                <RadioButton
                    android:id="@+id/rbFem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:text="Feminino" />

            </RelativeLayout>

        </RadioGroup>

        <!--nome do usuario-->
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:id="@+id/edtNomeUsuarioCadastr"
            android:layout_below="@+id/RadioGroup"
            android:layout_marginTop="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:layout_marginTop="10dp"/>

        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <!--senhado usuario-->
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:id="@+id/edtSenhaUsuarioCadastr"
            android:layout_below="@+id/edtNomeUsuarioCadastr"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha"
                android:inputType="textPersonName"
                />

        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    </RelativeLayout>
</RelativeLayout>
